# Dockerfile для Node.js backend
FROM node:18-alpine

WORKDIR /app

# Устанавливаем зависимости для SQLite
RUN apk add --no-cache python3 make g++

# Копируем package.json и устанавливаем зависимости
COPY package*.json ./
RUN npm ci --only=production

# Копируем оба серверных файла
COPY server.cjs ./
COPY server_sqlite.cjs ./

EXPOSE 3000

CMD ["node", "server_sqlite.cjs"]